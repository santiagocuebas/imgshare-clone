<div class="container white">
	<div class="logo"><img src="/img/imgshare-logo.png"></div>
	<div class="sign">
		<div class="form-title"> 
			Sign Up!
		</div>
		<form action="/signup" method="POST">
			<div class="form-body">
				<div class="box-input"><input id="username" type="text" class="form-input" name="username" maxlength="255" placeholder="Username" {{#if values.username}} value="{{values.username}}" {{/if}}></div>
				{{#if message.username}}
				<div id="m-username" class="box-input">
					<div class="error-msg">{{message.username}}<i data-id="m-username" class="fa-solid fa-xmark error-msg-i"></i> </div>
				</div>
				{{/if}}
				<div class="box-input"><input id="email" type="email" class="form-input" name="email" maxlength="255" placeholder="Email" {{#if values.email}} value="{{values.email}}" {{/if}}></div>
				{{#if message.email}}
				<div id="m-email" class="box-input">
					<div class="error-msg">{{message.email}}<i data-id="m-email" class="fa-solid fa-xmark error-msg-i"></i> </div>
				</div>
				{{/if}}
				<div class="box-input"><input id="password" type="password" class="form-input" name="password" maxlength="255" placeholder="Password" ></div>
				{{#if message.password}}
				<div id="m-password" class="box-input">
					<div class="error-msg">{{message.password}}<i data-id="m-password" class="fa-solid fa-xmark error-msg-i"></i> </div>
				</div>
				{{/if}}
				<div class="box-input"><input id="confirm_password" type="password" class="form-input" name="confirm_password" maxlength="255" placeholder="Retype Password" ></div>
				{{#if message.confirm_password}}
				<div id="m-confirm" class="box-input">
					<div class="error-msg">{{message.confirm_password}}<i data-id="m-confirm" class="fa-solid fa-xmark error-msg-i"></i> </div>
				</div>
				{{/if}}
			</div>
			<div class="box-input"><button class="link-button">Sign Up</button></div>
		</form>
	</div>
</div>